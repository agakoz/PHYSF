<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="9" author="agakoz">
        <createTable tableName="incoming_visits">
            <column name="id" type="int" generationType="identity"/>
            <column name="user_id" type="int"/>
            <column name="patient_id" type="int"/>
            <column name="date" type="date"/>
            <column name="time" type="time"/>
            <column name="note" type="varchar(255)"/>
            <column name="completed" type="boolean"/>
        </createTable>

        <addNotNullConstraint tableName="incoming_visits" columnName="user_id" columnDataType="int"/>
        <addNotNullConstraint tableName="incoming_visits" columnName="patient_id" columnDataType="int"/>
        <addNotNullConstraint tableName="incoming_visits" columnName="id" columnDataType="int"/>
        <addNotNullConstraint tableName="incoming_visits" columnName="date" columnDataType="date"/>
        <addNotNullConstraint tableName="incoming_visits" columnName="time" columnDataType="time"/>
        <addNotNullConstraint tableName="incoming_visits" columnName="completed" columnDataType="boolean"/>

        <addPrimaryKey tableName="incoming_visits" columnNames="id"/>
        <addForeignKeyConstraint baseTableName="incoming_visits" baseColumnNames="user_id" constraintName="fk_incoming_visits_user"
                                 referencedTableName="users" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="incoming_visits" baseColumnNames="patient_id" constraintName="fk_incoming_visits_patient"
                                 referencedTableName="patients" referencedColumnNames="id"/>
        <addDefaultValue columnName="completed"
                         defaultValue="FALSE"
                         tableName="incoming_visits"/>
    </changeSet>
</databaseChangeLog>