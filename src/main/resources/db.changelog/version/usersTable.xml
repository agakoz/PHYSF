<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2" author="agakoz">
        <createTable tableName="users">
            <column name="id" type="int" generationType="identity"/>
            <column name="account_id" type="int"/>
            <column name="name" type="varchar(255)"/>
            <column name="surname" type="varchar(255)"/>
            <column name="company" type="varchar(255)"/>
            <column name="email" type="varchar(320)"/>
            <column name="birth_date" type="date"/>
        </createTable>

        <addNotNullConstraint tableName="users" columnName="id" columnDataType="int"/>
        <addNotNullConstraint tableName="users" columnName="account_id" columnDataType="int"/>
        <addNotNullConstraint tableName="users" columnName="name" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="users" columnName="surname" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="users" columnName="company" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="users" columnName="email" columnDataType="varchar(320)"/>
        <addNotNullConstraint tableName="users" columnName="birth_date" columnDataType="date"/>


        <addPrimaryKey tableName="users" columnNames="id"/>
        <addForeignKeyConstraint baseTableName="users" baseColumnNames="account_id" constraintName="fk_users_account"
                                 referencedTableName="accounts" referencedColumnNames="id"/>
        <addUniqueConstraint tableName="users" columnNames="email"/>
    </changeSet>
</databaseChangeLog>