<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="8" author="agakoz">
        <createTable tableName="planned_visits">
            <column name="id" type="int" generationType="identity" autoIncrement="true"/>
            <column name="user_id" type="int"/>
            <column name="patient_id" type="int"/>
            <column name="date" type="date"/>
            <column name="start_time" type="time"/>
            <column name="end_time" type="time"/>
            <column name="note" type="varchar(255)"/>
        </createTable>

        <addNotNullConstraint tableName="planned_visits" columnName="user_id" columnDataType="int"/>
        <addNotNullConstraint tableName="planned_visits" columnName="patient_id" columnDataType="int"/>
        <addNotNullConstraint tableName="planned_visits" columnName="id" columnDataType="int"/>
        <addNotNullConstraint tableName="planned_visits" columnName="date" columnDataType="date"/>
        <addNotNullConstraint tableName="planned_visits" columnName="start_time" columnDataType="time"/>
        <addNotNullConstraint tableName="planned_visits" columnName="end_time" columnDataType="time"/>

        <addPrimaryKey tableName="planned_visits" columnNames="id"/>
        <addForeignKeyConstraint baseTableName="planned_visits" baseColumnNames="user_id"
                                 constraintName="fk_planned_visits_user"
                                 referencedTableName="users" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="planned_visits" baseColumnNames="patient_id"
                                 constraintName="fk_planned_visits_patient"
                                 referencedTableName="patients" referencedColumnNames="id"/>

    </changeSet>
</databaseChangeLog>